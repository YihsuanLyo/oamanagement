        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="isComplete" property="isComplete" jdbcType="INTEGER"/>
        <result column="worktime" property="worktime" jdbcType="FLOAT"/>
        <result column="progress" property="progress" jdbcType="FLOAT"/>
        <result column="programId" property="programId" jdbcType="INTEGER"/>

        <association property="user" javaType="User">
            <result column="sName" property="name"/>
            <association property="deptPo" javaType="Dept">
                <result property="deptName" column="deptName"/>
            </association>
        </association>

        <collection property="userList" ofType="User">
            <id column="uid" property="uid"/>
            <result column="mName" property="name"/>
            <result column="dept" property="dept"/>
        </collection>
    </resultMap>
    <sql id="Base_Column_List">
        s.id as sId, createBy, s.startTime, s.endTime,s.createTime, title, s.descr, s.status,isComplete,worktime,progress,programId,
    </sql>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        d.deptName,u.uid,u.name as mName,u.dept,uu.name as sName
        from t_dept d
        INNER JOIN t_user uu on d.depId=uu.dept
        INNER JOIN t_milestone s ON uu.uid = s.createBy
        LEFT JOIN t_milestone_user su ON su.s_Id=s.id
        LEFT JOIN t_user u ON su.su_Id = u.uId

        where s.id = #{id,jdbcType=INTEGER}
    </select>


    <select id="selectMilestoneList" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        d.deptName,u.name as mName,u.dept,uu.name as sName
        from t_dept d
        INNER JOIN t_user uu on d.depId=uu.dept
        INNER JOIN t_milestone s ON uu.uid = s.createBy
        LEFT JOIN t_milestone_user su ON su.s_Id=s.id
        LEFT JOIN t_user u ON su.su_Id = u.uId
        <where>
            <if test="id !=null and id!=''">
                and id =#{id}
            </if>
            <if test="createBy !=null and id!=''">
                and createBy =#{createBy}
            </if>


            <if test="beginTime !=null">
                <![CDATA[   and DATE_FORMAT(s.createTime, '%Y-%m-%d')>=  DATE_FORMAT(#{beginTime}, '%Y-%m-%d')   ]]>
            </if>
            <if test="overTime !=null">
                <![CDATA[  and DATE_FORMAT(s.createTime, '%Y-%m-%d') <= DATE_FORMAT(#{overTime}, '%Y-%m-%d')    ]]>
            </if>

            <if test="isComplete!=null">
                and  isComplete = #{isComplete}
            </if>
        </where>
    </select>

    <select id="selectMyMilestoneList" resultMap="BaseResultMap" parameterType="String">
    select
    <include refid="Base_Column_List"/>
        d.deptName,u.name as mName,u.dept,uu.name as sName
        from t_dept d
        INNER JOIN t_user uu on d.depId=uu.dept
        INNER JOIN t_milestone s ON uu.uid = s.createBy
        LEFT JOIN t_milestone_user su ON su.s_Id=s.id
        LEFT JOIN t_user u ON su.su_Id = u.uId



         where su.su_Id=#{uId} and s.isComplete = 0



        ORDER BY start_Time DESC

    </select>

    <select id="selectMyMilestoneList_all" resultMap="BaseResultMap" parameterType="String">
