<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yj.oa.project.mapper.SampleMapper">
  <resultMap id="BaseResultMap" type="com.yj.oa.project.po.Sample">
    <id column="id" property="id" jdbcType="INTEGER"/>
    <result column="createBy" property="createBy" jdbcType="VARCHAR"/>
    <result column="startTime" property="startTime" jdbcType="TIMESTAMP"/>
    <result column="title" property="title" jdbcType="VARCHAR"/>
    <result column="descr" property="descr" jdbcType="VARCHAR"/>
    <result column="total_mount" property="total_mount" jdbcType="INTEGER"/>
    <result column="residues" property="residues" jdbcType="INTEGER"/>
    <result column="programId" property="programId" jdbcType="INTEGER"/>
    <result column="createTime" property="createTime" jdbcType="TIMESTAMP"/>

  </resultMap>

  <sql id="Base_Column_List">
     id , createBy,title,descr, startTime, total_mount, residues, programId,createTime
  </sql>


  <!--列表-->
  <select id="selectSampleList" resultMap="BaseResultMap" parameterType="Sample">
    select
    <include refid="Base_Column_List" />
    from t_sample
    <where>
      <if test="title != null and title!=null">
        and title LIKE concat('%',#{title},'%')
      </if>
      <if test="id != null and id!=''">
        and id=#{id}
      </if>
      <if test="programId!= null and programId!=''">
        and programId=#{programId}
      </if>

    </where>
  </select>

  <!--根据id查询-->
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_sample
    where id = #{id,jdbcType=INTEGER}
  </select>

  <!--根据programid查询-->
  <select id="selectByProgramKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_sample

    where programId = #{programId}


  </select>


  <!--批量删除-->
  <delete id="deleteByPrimaryKeys" parameterType="String">
    delete from t_sample
    where id in
     <foreach collection="array" item="id" open="(" separator="," close=")">
       #{id}
     </foreach>
  </delete>

  <!--插入-->
  <insert id="insertSelective" parameterType="Sample">
    insert into t_sample
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="title != null">
        title,
      </if>
      <if test="descr != null">
        descr,
      </if>
      <if test="total_mount != null">
        total_mount,
      </if>
      <if test="residues != null">
        residues,
      </if>

      <if test="programId != null">
        programId,
      </if>

      <if test="createTime != null">
        createTime,
      </if>

      <if test="startTime != null">
        startTime,
      </if>

      <if test="createBy != null">
        createBy,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="title != null">
        #{title,jdbcType=VARCHAR},
      </if>
      <if test="descr != null">
        #{descr,jdbcType=VARCHAR},
      </if>
      <if test="total_mount != null">
        #{total_mount,jdbcType=INTEGER},
      </if>
      <if test="residues != null">
        #{residues,jdbcType=INTEGER},
      </if>
      <if test="programId != null">
        #{programId,jdbcType=INTEGER},
      </if>
      <if test="createTime != null">
        #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="startTime != null">
        #{startTime,jdbcType=TIMESTAMP},
      </if>
      <if test="createBy != null">
        #{createBy,jdbcType=TIMESTAMP},
      </if>
    </trim>
  </insert>


  <update id="updateByPrimaryKeySelective" parameterType="Sample" >
    update t_sample
    <set>
      <if test="title != null">
        title= #{title,jdbcType=VARCHAR},
      </if>
      <if test="descr != null">
        descr = #{descr,jdbcType=VARCHAR},
      </if>
      <if test="total_mount != null">
        total_mount = #{total_mount,jdbcType=INTEGER},
      </if>
      <if test="startTime != null">
        startTime = #{startTime,jdbcType=TIMESTAMP},
      </if>
      <if test="residues != null">
        residues = #{residues, jdbcType=INTEGER},
      </if>


    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>

</mapper>