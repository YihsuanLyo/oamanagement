  </resultMap>


  <sql id="Base_Column_List" >
     *
  </sql>



  <!--
     统计一个月有多少天请假
  -->
  <select id="selectByUserIdAndDate" resultMap="BaseResultMap" parameterType="ApplySample">
    SELECT
    <include refid="Base_Column_List"/>
    FROM t_sample_get t
    <where>

        <if test="proposer_Id !=null and proposer_Id !=''">
          and proposer_Id=#{proposer_Id}
        </if>
        <if test="beginTime !=null">
          <![CDATA[   and DATE_FORMAT(currDate, '%Y-%m-%d') >=  DATE_FORMAT(#{beginTime}, '%Y-%m-%d')   ]]>
        </if>
        <if test="overTime !=null">
          <![CDATA[  and DATE_FORMAT(currDate, '%Y-%m-%d') <= DATE_FORMAT(#{overTime}, '%Y-%m-%d')    ]]>
        </if>

    </where>
  </select>


  <!--查询列表-->
  <select id="selectApplySampleList" resultMap="BaseResultMap" parameterType="ApplySample">
     SELECT
    <include refid="Base_Column_List"/>
    FROM t_applyroom t
    <where>
      <if test="proposer_Id !null and proposer_Id != ''">
      and proposer_Id=#{proposer_Id},
    </if>
      <if test="procInstanId !null and procInstanId != ''">
      and procInstan_Id=#{procInstanId},
    </if>
      <if test="roomName !=null and roomName != ''">
        and roomName=#{roomName},
      </if>
      <if test="status !=null and status != ''">
        and status=#{status},
      </if>
    </where>
  </select>


  <!--根据主键查询-->
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="INTEGER" >
    select
    <include refid="Base_Column_List" />
    from t_sample_get
    where id = #{id,jdbcType=INTEGER}
  </select>


  <!--批量删除-->
  <delete id="deleteByprocInstIds" parameterType="java.lang.Integer" >
    delete from t_sample_get
    WHERE procInstId IN
    <foreach collection="array" open="(" separator="," close=")" item="id">
      #{id}
    </foreach>
  </delete>

